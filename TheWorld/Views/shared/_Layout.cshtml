<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>The World - @ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootswatch/yeti/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/CSS/site.CSS" />
    
</head>
<body>
    <div id="sidebar">
        <!--making the soon to be sidebar of website-->
        <img src="~/img/fi_ATTLB.jpg" alt="headshot" class="headshot" />
        <span id="username">Sam Hastings</span>
        <ul class="menu">
            <!--making a list of bullet points that take yah places-->
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>
    <div id="wrapper">
        <!--wrap it all in a div, again.-->
        <div id="main">
            <div>
                <button id="sidebarToggle" class="btn btn-primary">
                    <i class="fa fa-angle-left"></i>                    
                </button>
            </div>
            <!--the main div-->
            @RenderBody()
        </div>
        <div id="footer">          
                <!--a much more smaller div-->
            <p class="text-primary">&copy; 2017 The World Ltd.</p>            
        </div>
    </div>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/site.JS"></script>
    @RenderSection("scripts", false)
</body> <!--the end, or is it?-->
</html> <!--the real end-->
